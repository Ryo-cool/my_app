= render "simple-header"
.new-pages
  .container
    = form_with(model: @post, local: true) do |form|
      .posts
        %h3.post
          投稿します
        .post_name
          タイトル
        = form.text_field :name,class: "name_area", placeholder: "name"
        //= form.text_field :image, placeholder: "Image Url"
        .post_name
          説明文
          .post_text_area
            = form.text_area :text,class: "text_area", placeholder: "text" , rows: "10"
        .post_name
          画像
          .post_image_area
            = form.fields_for :images do |i|
              = i.file_field :src
              %br/
        .post_submit-btn
          = form.submit "投稿する",class: "submit_btn"
= render "footer"

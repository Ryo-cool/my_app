.header
= render "posts/header"
.user-pages
  .user_data
    .user_data_image
      = image_tag @user.image.to_s,size: "200x200"
    .user_data_name
      = @user.name
    .user_data_introduction
      = @user.introduction
    .edit_btn
      = link_to "編集する", "/users/edit"
  .user-posts
    // 新規投稿順
    .user-posts-new
      .user-posts-new-list
      - @posts.each do |post|
        .user-posts-new-list-image
          = image_tag (post.images.first.src.url.to_s),size: "250x250"
          .user-posts-new-list-name
            = post.name
            .user-posts-new-list-text
              = post.text

= render "posts/footer"
